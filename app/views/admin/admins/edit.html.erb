<h1>Admin::Admins#edit</h1>
<p>Find me in app/views/admin/admins/edit.html.erb</p>
<%= form_with model: @admin, url: admin_admin_path(@admin) do |f| %>
  <%= f.label :店舗名,class: "col-sm-3 col-form-label " %>

    <%= f.text_field :name, autofocus: true%>

    <%= f.label :住所 %>

    <%= f.text_field :address, autofocus: true, class:"form-control"%>

    <%= f.label :電話番号 %>

    <%= f.text_field :phone_number, autofocus: true %>

    <%= f.label :メールアドレス %>

    <%= f.email_field :email, autofocus: true %>

    <%= f.label :お店ホームページ %>

    <%= f.text_field :home_page, autofocus: true  %>

    <%= f.label :商品提供開始時間 %>

    <%= f.select :start_offer, [*0..24].map{ |o| format("%02d", o) + ":00" }%>

    <%= f.label :商品提供終了時間 %>

    <%= f.select :end_offer,[*0..24].map{ |o| format("%02d", o) + ":00" } %>
    <%= f.label :商品画像 ,class: "col-sm-3 col-form-label " %>
    <%= f.file_field :image, accept: "image/" %>
    <%= f.submit " お店を編集する " %>

<% end %>