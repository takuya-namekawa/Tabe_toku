<h1>Admin::Items#index</h1>
<%= form_with model: @item, url: admin_items_path do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :explanation %><br>
  <%= f.text_area :explanation %><br>
  <%= f.label :image %><br>
  <%= f.file_field :image, accept: "image/*" %>
  <%= f.submit %>
<% end %>

<% @items.each do |item| %>
  <% if item.admin == current_admin %>
    <%= item.name %>
    <%= item.explanation %>
    <%= image_tag item.get_image(100,100) %>
    <%= link_to "編集", edit_admin_item_path(item) %>
    <%= link_to "削除", admin_item_path(item), method: :delete %>
  <% end %>
<% end %>




